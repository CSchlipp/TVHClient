<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_crash_reporting_settings">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="crash_reports_enabled"
            android:summaryOff="Crash reports disabled"
            android:summaryOn="Crash reports enabled"
            android:title="Enable sending anonymous crash reports" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="usage_statistics_enabled"
            android:summaryOff="Usage statistics disabled"
            android:summaryOn="Usage statistics enabled"
            android:title="Enable sending anonymous usage statistics" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="debug_mode_enabled"
            android:summary="@string/pref_debug_mode_sum"
            android:title="@string/pref_debug_mode" />

        <Preference
            android:dependency="debug_mode_enabled"
            android:key="send_debug_logfile_enabled"
            android:summary="@string/pref_send_logfile_sum"
            android:title="@string/pref_send_logfile" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_connections">
        <EditTextPreference
            android:id="@+id/connection_timeout"
            android:name="@string/pref_connection_timeout"
            android:defaultValue="5"
            android:key="connection_timeout"
            android:numeric="integer"
            android:summary="Defines the time in seconds until the server must have sent a reply. Increasing the value can improve the connectivity on slow networks."
            android:title="@string/pref_connection_timeout" />
    </PreferenceCategory>

    <PreferenceCategory android:title="EPG">
        <ListPreference
            android:defaultValue="@string/pref_default_epg_max_time"
            android:dialogTitle="EPG Sync Duration"
            android:entries="@array/epg_max_time_names"
            android:entryValues="@array/epg_max_time_values"
            android:key="epg_max_time"
            android:summary="Amount of EPG data to sync"
            android:title="EPG Sync Duration" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_misc">
        <Preference
            android:key="clear_search_history"
            android:title="@string/pref_clear_search_history" />
        <Preference
            android:key="clear_icon_cache"
            android:title="@string/pref_clear_icon_cache" />
        <Preference
            android:key="clear_database"
            android:summary="Remove all information from the database. This includes all channels, channel tags, programs and recordings from the database."
            android:title="Clear database" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Playback">
        <CheckBoxPreference
            android:defaultValue="@bool/pref_default_shield_workaround_enabled"
            android:key="shield_workaround_enabled"
            android:title="Enable nVidia Shield Workaround" />

        <CheckBoxPreference
            android:defaultValue="@bool/pref_default_debug_text_view_enabled"
            android:key="debug_text_view_enabled"
            android:title="Enable Debug Text View" />

        <CheckBoxPreference
            android:defaultValue="@bool/pref_default_timeshift_enabled"
            android:key="timeshift_enabled"
            android:title="Enable timeshift support" />
    </PreferenceCategory>
</PreferenceScreen>