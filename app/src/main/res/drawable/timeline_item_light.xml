<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 
    Draws a border at the left side of the layout that shows a 
    single program. This separates each program from each other. 
    -->
    <item
        android:id="@+id/timeline_item_genre"
        android:bottom="0dp"
        android:left="-1dp"
        android:right="0dp"
        android:top="-1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="#FFE0E0E0" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>