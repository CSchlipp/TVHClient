<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tvheadend.tvhclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.tvheadend.tvhclient.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".activities.SearchResultActivity" />
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="org.tvheadend.tvhclient.MainApplication" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="8ea21b9d2155f0843c3c57f71a18568c71ef17f9" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="org.tvheadend.tvhclient.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".features.startup.StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data android:scheme="tvhclient" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.search.SearchActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".features.settings.SettingsActivity" />
        <activity
            android:name=".features.download.DownloadActivity"
            android:theme="@android:style/Theme.NoTitleBar" />

        <service
            android:name=".data.service.EpgSyncService"
            android:enabled="true" />

        <provider
            android:name=".features.search.SuggestionProvider"
            android:authorities="SuggestionProvider"
            android:exported="false" />

        <receiver android:name=".features.notifications.ProgramNotificationReceiver" />
        <receiver android:name=".features.notifications.RecordingNotificationReceiver" />
        <activity android:name=".features.settings.SettingsAddEditConnectionActivity" />
        <activity android:name=".features.dvr.RecordingAddEditActivity" />
        <activity android:name=".features.dvr.recordings.RecordingDetailsActivity" />
        <activity android:name=".features.programs.ProgramListActivity" />
        <activity android:name=".features.changelog.ChangeLogActivity" />
        <activity android:name=".features.MainActivity" />
        <activity android:name=".features.navigation.NavigationActivity" />
        <activity
            android:name=".features.programs.ProgramDetailsActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity="" />
        <activity android:name=".features.information.InfoActivity" />
        <activity android:name=".features.purchase.UnlockerActivity" />
        <activity android:name=".features.playback.PlayRecordingActivity" />
        <activity android:name=".features.playback.PlayChannelActivity" />
        <activity android:name=".features.playback.CastChannelActivity" />
        <activity android:name=".features.playback.CastRecordingActivity" />

    </application>
</manifest>
